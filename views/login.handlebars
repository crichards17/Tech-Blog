 <div class="card">
      <h3 class="card-header">Login</h3>
      <form id="login-form" class="card-body">
        <label class="form-label" for="login-user">Username</label>
        <input  id="login-user" type="text" autofocus="true" class="form-input" />

        <label class="form-label" for="login-pass">Password</label>
        <input id="login-pass" type="password" autofocus="true" class="form-input" />

        <button type="submit" class="btn">Login</button>
        <a class="login-link" href="/signup">Sign up</a>
      </form>
    </div>
    
<script src="/js/login.js"></script>