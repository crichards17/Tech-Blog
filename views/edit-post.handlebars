<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body">
        <label for="post-title" class="form-label">Post Title</label>
        <input name="post-title" id="post-title" type="text" value="{{post.title}}" class="form-input" />
        <label class="form-label" for="post-content">Post Content</label>
        <input name="post-content" id="post-content" type="text" value="{{post.content}}" class="form-input" />
        <button type="submit" class="btn" id="update-post-btn">Update Post</button>
        <button type="button" class="btn" id="delete-post-btn">Delete Post</button>
    </form>
</div>


<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>